page{
  width: 100%;
  height: 100vh;
  background-color: #f4f6f8;
}
.container{
  /* //任何设备在小程序都是750rpx*/
  position: fixed;
  width: 686rpx;
  height: 438rpx;
  background-color: green;
  margin-top: 32rpx;
  margin-left: 32rpx;
  top: 140rpx;
  box-shadow: 1px 1px 6px #f4f6f8;
  white-space: nowrap;
  }
  .section{
    height: 108rpx;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
  }
  .nav-me,.nav-all{
    background-color: #ffffff;
     height: 30rpx;
    width: 30rpx;
     z-index: 999;    
  }
  .nav-me{
   
    margin-top: 10rpx;
    
    transform: scale(.15);
   
  }
  /* z-index? */
  .nav-all{
    right: 0rpx;
    
    position: absolute;
    
    top: 0;
   
    transform: scale(.18);
    margin-right: 80rpx;
  }
 .nav-item{
   display: inline-block;
   margin-left: 20rpx;
   margin-right: 20rpx;
   text-align: center;
 }
  .nav{
    height: 100rpx;
    width: 550rpx;
    position: fixed;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 108rpx;
    font-size: 16px;
    white-space: nowrap;
    top: 0;
    left: 100rpx;
    z-index: 99;
    margin-bottom: 32px;
    background-color: #ffffff
  }
  .nav-item.active{
    color: #fc975c
  }
