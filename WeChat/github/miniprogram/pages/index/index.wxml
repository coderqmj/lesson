<view class="wrapper page">
<!-- 登录页 wrapper main -->
  <view class="main">
    <view class="log">
      <image src="../../images/mark-github.svg"></image>
    </view>
    <!-- tab组件 vant组件 -->
      <tabs>
        <tab title="账号密码">
          <form class="from" bindsubmit="commitAccount" report-submit="{{true}}">
            <view>
             <input name="username" placeholder="输入账号" focus /> 
             <input name="password" placeholder="输入密码" value='{{password}}' />
            </view>
          <button class="login" form-type="submit" >登录</button></form></tab>
        <tab title="Token"></tab>
        <!-- token可以替换账号密码登录 -->
      </tabs>
  </view>
</view>
